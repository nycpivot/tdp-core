{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "14 || 16"
  },
  "scripts": {
    "build": "backstage-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "clean": "backstage-cli clean && lerna run clean",
    "create-plugin": "backstage-cli create-plugin --scope internal",
    "dev": "concurrently \"yarn start\" \"yarn start-backend\"",
    "start:integration": "concurrently \"yarn start --config ../../app-config.yaml --config ../../app-config.e2e.yaml\" \"yarn start-backend --config ../../app-config.yaml --config ../../app-config.e2e.yaml\"",
    "diff": "lerna run diff --",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "prettify": "prettier --write .",
    "purge": "find . -type d -name node_modules -prune -print0 | xargs -0 rm -rf",
    "remove-plugin": "backstage-cli remove-plugin",
    "start": "yarn workspace app start",
    "start-backend": "yarn workspace backend start",
    "test": "lerna run test",
    "test:all": "lerna run test -- --coverage",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.22.3",
    "@spotify/prettier-config": "^12.0.0",
    "concurrently": "^6.0.0",
    "lerna": "^6.6.1",
    "node-gyp": "^9.0.0",
    "prettier": "^2.3.2",
    "typescript": "~4.6.4"
  },
  "resolutions": {
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@backstage/backend-common": "^0.18.3"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
