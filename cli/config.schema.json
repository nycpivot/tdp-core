{
    "id": "https://gitlab.eng.vmware.com/esback/builder/plugin/config",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "description": "Schema definition of esback config file",
    "type": "object",
    "properties": {
        "metadata": {
            "$ref": "#/$defs/Metadata"
        },
        "plugins": {
            "$ref": "#/$defs/PluginSpec"
        }
    },
    "required": [
        "metadata",
        "plugins"
    ],
    "$defs": {
        "Metadata": {
            "title": "Metadata",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "version"
            ]
        },
        "PluginSpec": {
            "title": "PluginSpec",
            "type": "object",
            "properties": {
                "app": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/PluginConfig"
                    }
                },
                "backend": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/PluginConfig"
                    }
                }
            }
        },
        "PluginConfig": {
            "title": "PluginConfig",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "config": {
                    "type": "object"
                }
            },
            "required": [
                "name"
            ]
        }
    }
}
