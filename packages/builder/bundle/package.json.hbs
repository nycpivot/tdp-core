{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "backstage-cli repo build --all",
    "build-image": "yarn workspace backend build-image",
    "clean": "backstage-cli clean && lerna run clean",
    "create-plugin": "backstage-cli create-plugin --scope internal",
    "dev": "concurrently \"yarn start-frontend\" \"yarn start\"",
    "diff": "lerna run diff --",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "prettify": "prettier --write .",
    "purge": "find . -type d -name node_modules -prune -print0 | xargs -0 rm -rf",
    "remove-plugin": "backstage-cli remove-plugin",
    "start-frontend": "yarn workspace app start",
    "start": "yarn workspace backend start",
    "test": "lerna run test",
    "test:all": "lerna run test -- --coverage",
    "tsc": "tsc",
    "tsc:full": "tsc --skipLibCheck false --incremental false",
    "buildpack": "pack build ${image_tag} --path . --builder paketobuildpacks/builder:full --env \"BP_NODE_RUN_SCRIPTS=tsc,build\""
  },
  "workspaces": {
    "packages": [
      {{#each app.plugins}}
          {{#if this.local}}
      "{{{this.localPath}}}",
          {{/if}}
      {{/each}}
      {{#each backend.plugins}}
        {{#if this.local}}
      "{{{this.localPath}}}",
        {{/if}}
      {{/each}}
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.22.3",
    "@spotify/prettier-config": "^12.0.0",
    "concurrently": "^6.0.0",
    "lerna": "^4.0.0",
    "node-gyp": "^9.0.0",
    "prettier": "^2.3.2",
    "typescript": "~4.6.4"
  },
  "resolutions": {
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@backstage/backend-common": "^0.18.2"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
